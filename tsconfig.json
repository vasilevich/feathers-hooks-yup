{
    "compilerOptions": {
        "outDir": "./js",
        "target": "es5",
        "module": "commonjs",
        "noImplicitAny": true,
        "removeComments": false,
        "declaration": true,
        "sourceMap": true,
        "suppressImplicitAnyIndexErrors": true,
        "jsx": "react"
    },
    "include": [
        "./ts/**/*.tsx",
        "./ts/**/*.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}